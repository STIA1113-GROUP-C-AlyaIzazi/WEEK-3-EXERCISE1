package exerciseWeek3;

public class CylinderComputation {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		double radius, height, surfaceArea, baseArea, volume;
		double PI = 3.14159265,
				
        radius1 = 3;
        height = 5;
        surfaceArea = 2.0*PI*radius1*height;
        baseArea = 4.0*PI*radius1*radius1;
        volume = PI*radius1*radius1*height;
        
        System.out.printf("The surfaceArea is %.2f" , surfaceArea);
        System.out.println();
        System.out.printf("The baseArea is %.2f" , baseArea);
        System.out.println();
        System.out.printf("The volume is %.2f" , volume);
        System.out.println();
        		
	}

}
